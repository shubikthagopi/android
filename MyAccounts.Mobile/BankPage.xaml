<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="MyAccounts.Mobile.BankPage"
             Title="Bank">
    <StackLayout Padding="10">
        <DatePicker x:Name="BankDatePicker"/>
        <Entry x:Name="OpeningEntry" Placeholder="Opening Balance" Keyboard="Numeric"/>
        <Entry x:Name="DepositEntry" Placeholder="Deposit" Keyboard="Numeric"/>
        <Button Text="Save Bank Entry" Clicked="OnSaveBank"/>
        <ListView x:Name="BankList" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding EntryDate}" Detail="{Binding Deposit}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>